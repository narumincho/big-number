{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["deno.ns", "deno.unstable", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "tasks": {
    "client-build": "deno run --check --unstable-bundle --allow-read=./client,./generated --allow-write=./generated ./clientBuild.tsx",
    "client-build-watch": "deno run --check --watch=./client --unstable-bundle --allow-read=./client,./generated --allow-write=./generated --allow-env=NODE_ENV ./clientBuild.tsx",
    "start-watch": "deno run --check --watch --allow-env --allow-net ./main.tsx"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@types/pg": "npm:@types/pg@^8.15.6",
    "hono": "npm:hono@^4.10.6"
  },
  "deploy": {
    "org": "narumincho",
    "app": "big-number"
  }
}
